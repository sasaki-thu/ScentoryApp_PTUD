@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký - Scentory</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Phudu:wght@400;600;700&family=Questrial&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Questrial', sans-serif;
            background-color: #8B6F47;
            background-position: center;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0, 0, 0, 0.4);
                z-index: 1;
            }

        .container {
            width: 100%;
            max-width: 520px;
            position: relative;
            z-index: 2;
            transition: max-width 0.4s ease-in-out;
        }

            .container.wide {
                max-width: 768px;
            }

        .header {
            text-align: center;
            margin-bottom: 2rem;
        }

            .header .logo {
                color: #fff;
                text-shadow: 0 2px 4px rgba(0,0,0,0.5);
            }

        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: #eee;
            text-decoration: none;
            margin-bottom: 1rem;
            cursor: pointer;
            transition: color 0.3s;
        }

            .back-button:hover {
                color: #fff;
            }

        .logo {
            font-family: 'Phudu', cursive;
            font-size: 3rem;
            font-weight: 700;
            color: #8B6F47;
            margin-bottom: 0.5rem;
        }

        .subtitle {
            color: #eee;
            text-shadow: 0 1px 2px rgba(0,0,0,0.4);
        }

        .role-badge {
            font-weight: 600;
            color: #DAC09B;
        }

        .role-selection {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .role-card {
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            padding: 2rem;
            border-radius: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.18);
        }

            .role-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
            }

        .role-card-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .role-card-left {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .role-icon {
            width: 48px;
            height: 48px;
            border-radius: 0.75rem;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(0, 0, 0, 0.1);
        }

            .role-icon svg {
                stroke: #333;
            }

        .role-title {
            font-family: 'Phudu', cursive;
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 0.25rem;
            color: #333;
        }

        .role-desc {
            font-size: 0.875rem;
            opacity: 0.9;
            color: #555;
        }

        .arrow-icon {
            width: 24px;
            height: 24px;
            stroke: #333;
        }

        .auth-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(15px);
            -webkit-backdrop-filter: blur(15px);
            border-radius: 1.5rem;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .form-container {
            padding: 2.5rem 3rem;
        }

        .form-group {
            margin-bottom: 1rem;
            position: relative;
        }

        .form-label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            color: #333;
            margin-bottom: 0.5rem;
        }

        .form-input {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #ddd;
            border-radius: 0.5rem;
            font-size: 1rem;
            font-family: 'Questrial', sans-serif;
            transition: all 0.3s;
        }

            .form-input:focus {
                outline: none;
                border-color: #8B6F47;
                box-shadow: 0 0 0 4px rgba(139, 111, 71, 0.15);
            }

            .form-input.invalid {
                border-color: #e74c3c;
            }

        .error-message {
            color: #e74c3c;
            font-size: 0.75rem;
            margin-top: 4px;
            height: 12px;
        }

        .password-input-wrapper {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: #666;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
        }

        .nav-btn, .submit-btn {
            width: 100%;
            padding: 0.875rem;
            border: none;
            border-radius: 0.5rem;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            font-family: 'Phudu', cursive;
        }

        .submit-btn {
            background: #8B6F47;
            color: white;
        }

            .submit-btn:hover {
                background: #6B5437;
                transform: scale(1.02);
                box-shadow: 0 8px 25px rgba(139, 111, 71, 0.4);
            }

        .nav-btn {
            background-color: #f0f0f0;
            color: #333;
        }

            .nav-btn:hover {
                background-color: #e0e0e0;
            }

        .login-link-container {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.9rem;
            color: #333;
        }

            .login-link-container a {
                color: #8B6F47;
                font-weight: 600;
                text-decoration: none;
            }

                .login-link-container a:hover {
                    text-decoration: underline;
                }

        .hidden {
            display: none;
        }

        #registerForm {
        }

        .register-steps {
            display: flex;
            width: 200%;
            transition: transform 0.4s ease-in-out;
        }

        .register-step {
            width: 50%;
            flex-shrink: 0;
            padding: 0 2px;
        }

        .progress-bar-container {
            margin-bottom: 1.5rem;
        }

        .progress-bar {
            width: 100%;
            height: 8px;
            background-color: #e0e0e0;
            border-radius: 4px;
            overflow: hidden;
        }

        .progress-bar-fill {
            width: 50%;
            height: 100%;
            background-color: #8B6F47;
            border-radius: 4px;
            transition: width 0.4s ease-in-out;
        }

        .nav-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 1.5rem;
            gap: 1rem;
        }

            .nav-buttons .nav-btn, .nav-buttons .submit-btn {
                width: 48%;
            }

        .footer {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.875rem;
            color: #eee;
            text-shadow: 0 1px 2px rgba(0,0,0,0.4);
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Role Selection Screen -->
        <div id="roleSelection">
            <div class="header">
                <div class="logo">SCENTORY</div>
                <p class="subtitle">Vui lòng chọn vai trò để đăng ký</p>
            </div>
            <div class="role-selection">
                <div class="role-card" onclick="selectRole('Admin')">
                    <div class="role-card-content">
                        <div class="role-card-left">
                            <div class="role-icon">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                            </div>
                            <div>
                                <div class="role-title">Admin</div>
                                <div class="role-desc">Dành cho quản trị viên hệ thống</div>
                            </div>
                        </div>
                        <svg class="arrow-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18l6-6-6-6"></path></svg>
                    </div>
                </div>
                <div class="role-card" onclick="selectRole('User')">
                    <div class="role-card-content">
                        <div class="role-card-left">
                            <div class="role-icon">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
                            </div>
                            <div>
                                <div class="role-title">User</div>
                                <div class="role-desc">Dành cho khách hàng thân thiết</div>
                            </div>
                        </div>
                        <svg class="arrow-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18l6-6-6-6"></path></svg>
                    </div>
                </div>
            </div>
            <div class="login-link-container" style="text-align: center; margin-top: 1.5rem;">
                <span style="color: #eee; text-shadow: 0 1px 2px rgba(0,0,0,0.4);">Đã có tài khoản?</span>
                <a href="/Home/Login" style="color: #fff; font-weight: 600; text-decoration: underline;">Đăng nhập ngay</a>
            </div>
        </div>

        <!-- Registration Form Screen -->
        <div id="authScreen" class="hidden">
            <div class="header">
                <div class="logo">SCENTORY</div>
                <p class="subtitle">Đăng ký vai trò: <span id="selectedRoleText" class="role-badge"></span></p>
            </div>

            <div class="auth-card">
                <div id="registerForm" class="form-container">
                    <div class="progress-bar-container">
                        <div class="progress-bar"><div class="progress-bar-fill"></div></div>
                    </div>
                    <div style="overflow-x: hidden;">
                        <div class="register-steps">
                            <div class="register-step" id="step1">
                                <h3 style="font-family: 'Phudu', cursive; text-align: center; margin-bottom: 1.5rem; color: #333;">Bước 1: Thông tin cá nhân</h3>
                                <div class="form-row">
                                    <div class="form-group"><label class="form-label">Họ và tên *</label><input type="text" class="form-input" id="regFullName" placeholder="Nguyễn Văn A" required><div class="error-message"></div></div>
                                    <div class="form-group"><label class="form-label">Giới tính</label><select class="form-input" id="regGender"><option>Nam</option><option>Nữ</option><option>Khác</option></select><div class="error-message"></div></div>
                                </div>
                                <div class="form-group"><label class="form-label">Email *</label><input type="email" class="form-input" id="regEmail" placeholder="email@example.com" required><div class="error-message"></div></div>
                                <div class="form-row">
                                    <div class="form-group"><label class="form-label">Số điện thoại *</label><input type="tel" class="form-input" id="regPhone" placeholder="0123456789" required><div class="error-message"></div></div>
                                    <div class="form-group"><label class="form-label">Ngày sinh *</label><input type="date" class="form-input" id="regBirthDate" required><div class="error-message"></div></div>
                                </div>
                                <div class="form-group"><label class="form-label">Địa chỉ *</label><input type="text" class="form-input" id="regAddress" placeholder="Số nhà, đường, quận, thành phố" required><div class="error-message"></div></div>
                            </div>

                            <div class="register-step" id="step2">
                                <h3 style="font-family: 'Phudu', cursive; text-align: center; margin-bottom: 1.5rem; color: #333;">Bước 2: Thông tin tài khoản</h3>
                                <div class="form-group"><label class="form-label">Tên đăng nhập *</label><input type="text" class="form-input" id="regUsername" placeholder="username123" required><div class="error-message"></div></div>
                                <div class="form-group">
                                    <label class="form-label">Mật khẩu *</label>
                                    <div class="password-input-wrapper">
                                        <input type="password" class="form-input" id="regPassword" placeholder="Ít nhất 6 ký tự" required>
                                        <button type="button" class="password-toggle" onclick="togglePassword('regPassword')"><svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg></button>
                                    </div>
                                    <div class="error-message"></div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Xác nhận mật khẩu *</label>
                                    <div class="password-input-wrapper">
                                        <input type="password" class="form-input" id="regConfirmPassword" placeholder="Nhập lại mật khẩu" required>
                                        <button type="button" class="password-toggle" onclick="togglePassword('regConfirmPassword')"><svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg></button>
                                    </div>
                                    <div class="error-message"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="nav-buttons">
                        <button class="nav-btn hidden" id="prevBtn">Quay lại</button>
                        <button class="submit-btn" id="nextBtn">Tiếp theo</button>
                        <button class="submit-btn hidden" id="submitBtn">Đăng ký</button>
                    </div>
                </div>
            </div>
            <div class="footer">
                <p>© 2025 Scentory. Hương thơm thuần khiết - Đậm chất riêng</p>
            </div>
        </div>
    </div>
    <script>
        let selectedRole = null;
        let currentStep = 1;

        const container = document.querySelector('.container');
        const roleSelectionScreen = document.getElementById('roleSelection');
        const authScreen = document.getElementById('authScreen');
        const selectedRoleText = document.getElementById('selectedRoleText');
        const registerSteps = document.querySelector('.register-steps');
        const progressBarFill = document.querySelector('.progress-bar-fill');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const submitBtn = document.getElementById('submitBtn');

        prevBtn.addEventListener('click', () => {
            if (currentStep === 1) {
                backToRoleSelection();
            } else {
                changeStep(-1);
            }
        });
        nextBtn.addEventListener('click', () => changeStep(1));
        submitBtn.addEventListener('click', handleRegister);

        function selectRole(role) {
            selectedRole = role;
            roleSelectionScreen.classList.add('hidden');
            authScreen.classList.remove('hidden');
            container.classList.add('wide');
            selectedRoleText.textContent = role;
            currentStep = 1;
            updateStepUI();
        }

        function backToRoleSelection() {
            selectedRole = null;
            roleSelectionScreen.classList.remove('hidden');
            authScreen.classList.add('hidden');
            container.classList.remove('wide');
        }

        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = input.nextElementSibling.querySelector('svg');
            if (input.type === 'password') {
                input.type = 'text';
                icon.innerHTML = '<path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path><line x1="1" y1="1" x2="23" y2="23"></line>';
            } else {
                input.type = 'password';
                icon.innerHTML = '<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle>';
            }
        }

        function changeStep(n) {
            if (n > 0 && !validateStep(currentStep)) {
                return;
            }
            currentStep += n;
            updateStepUI();
        }

        function updateStepUI() {
            registerSteps.style.transform = `translateX(-${(currentStep - 1) * 50}%)`;
            progressBarFill.style.width = `${currentStep * 50}%`;

            prevBtn.classList.remove('hidden');
            nextBtn.classList.toggle('hidden', currentStep === 2);
            submitBtn.classList.toggle('hidden', currentStep !== 2);
        }

        function validateStep(step) {
            let isValid = true;
            const stepContainer = document.getElementById(`step${step}`);
            const inputs = stepContainer.querySelectorAll('input[required]');

            inputs.forEach(input => {
                const parent = input.closest('.form-group');
                const errorDiv = parent.querySelector('.error-message');
                let message = '';

                if (input.value.trim() === '') {
                    message = 'Vui lòng không để trống trường này.';
                    isValid = false;
                } else if (input.type === 'email' && !/^\S+@@\S+\.\S+$/.test(input.value)) {
                    message = 'Email không hợp lệ.';
                    isValid = false;
                } else if (input.id === 'regPassword' && input.value.length < 6) {
                    message = 'Mật khẩu phải có ít nhất 6 ký tự.';
                    isValid = false;
                } else if (input.id === 'regConfirmPassword' && input.value !== document.getElementById('regPassword').value) {
                    message = 'Mật khẩu xác nhận không khớp.';
                    isValid = false;
                }

                errorDiv.textContent = message;
                input.classList.toggle('invalid', message !== '');
            });
            return isValid;
        }

        function handleRegister() {
            if (!validateStep(1) || !validateStep(2)) {
                 if (!validateStep(1)) changeStep(-1);
                 alert('Vui lòng điền đầy đủ và chính xác thông tin.');
                 return;
            }

            const userData = {
                fullName: document.getElementById('regFullName').value,
                gender: document.getElementById('regGender').value,
                email: document.getElementById('regEmail').value,
                phone: document.getElementById('regPhone').value,
                birthDate: document.getElementById('regBirthDate').value,
                address: document.getElementById('regAddress').value,
                username: document.getElementById('regUsername').value,
                password: document.getElementById('regPassword').value,
                role: selectedRole
            };

            console.log('Register:', userData);
            alert(`Đăng ký thành công!\nTài khoản: ${userData.username}\nVai trò: ${userData.role}`);

            window.location.href = '/Home/Login';
        }
    </script>
</body>
</html>