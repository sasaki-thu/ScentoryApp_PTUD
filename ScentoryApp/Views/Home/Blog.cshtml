@model ScentoryApp.Models.BlogViewModel
@{
    ViewData["Title"] = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-header py-5">
    <div class="container text-center">
        <h1 class="section-title text-uppercase" data-aos="fade-up">BÀI VIẾT DÀNH CHO BẠN</h1>
        <p class="text-secondary w-100 mx-auto" data-aos="fade-up" data-aos-delay="200">
            Hãy cùng khám phá nhiều điều mới với những bài viết dưới đây nhé!
        </p>
    </div>
</section>

<section>
    <div class="container">
        <div class="row" data-aos="zoom-out">

            @if (Model.Blogs != null && Model.Blogs.Any())
            {
                foreach (var item in Model.Blogs)
                {
                    // --- XỬ LÝ ẢNH TỪ DATABASE ---
                    string imgSrc = "";
                    if (item.AnhBlog != null && item.AnhBlog.Length > 0)
                    {
                        var base64 = Convert.ToBase64String(item.AnhBlog);
                        imgSrc = $"data:image/jpeg;base64,{base64}";
                    }
                    // ------------------------------------------------

                    <div class="col-md-4 mb-4">
                        <article class="post-item bg-light"
                                 style="display:flex; flex-direction:column; border-radius:20px; overflow:hidden; box-shadow:0 2px 8px rgba(0,0,0,0.08);">

                            <div class="post-image">
                                <a href="@Url.Action("BlogDetails", "Home", new { id = item.IdBlog })">
                                    <img src="@imgSrc" alt="@item.TenBlog" class="post-grid-image img-fluid w-100"
                                         style="height: 100%; object-fit: cover;">
                                </a>
                            </div>

                            <div class="post-content d-flex flex-column justify-content-between p-3 flex-grow-1">
                                <div>
                                    <div class="post-meta text-uppercase fs-6 text-secondary mb-2">
                                        <span class="post-category fw-bold">@item.DanhMucBlog - </span>
                                        <span class="meta-day"> @item.ThoiGianTaoBlog.ToString("dd/MM/yyyy")</span>
                                    </div>
                                    <h5 class="post-title mb-2">
                                        <a href="@Url.Action("BlogDetails", "Home", new { id = item.IdBlog })" class="text-decoration-none text-dark">
                                            @item.TenBlog
                                        </a>
                                    </h5>
                                    <p class="card-text text-muted">
                                        @if (!string.IsNullOrEmpty(item.NoiDungNgan) && item.NoiDungNgan.Length > 100)
                                        {
                                            @item.NoiDungNgan.Substring(0, 100)
                                
                                            <span>...</span>
                                        }
                                        else
                                        {
                                            @item.NoiDungNgan
                                        }
                                    </p>
                                </div>
                                <a href="@Url.Action("BlogDetails", "Home", new { id = item.IdBlog })" class="text-primary fw-bold mt-3 text-decoration-none">
                                    Đọc thêm »
                                </a>
                            </div>
                        </article>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center py-5">
                    <p>Chưa có bài viết nào.</p>
                </div>
            }
        </div>
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation" class="mt-5 mb-5">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Blog", new { page = Model.CurrentPage - 1 })"><span>&laquo;</span></a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Blog", new { page = i })">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Blog", new { page = Model.CurrentPage + 1 })"><span>&raquo;</span></a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</section>
<style>
    .post-item {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .post-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
        }

    .post-title a:hover {
        color: #C38154 !important;
    }

    .pagination .page-link {
        color: #C38154;
        border: 1px solid #C38154;
        margin: 0 3px;
        border-radius: 4px;
    }

    .pagination .page-item.active .page-link {
        background-color: #C38154;
        border-color: #C38154;
        color: white;
    }

    .pagination .page-item.disabled .page-link {
        color: #ccc;
        border-color: #dee2e6;
    }
</style>
