<section style="position:relative;width:100%;height:auto;overflow:hidden;margin:0;padding:0;">
        <!-- Slides wrapper -->
        <div id="slides" style="display:flex;width:100%;height:100%;transition:transform 0.5s ease;">
            <img src="~/assets/images/banner 4 nước hoa.png" style="min-width:100%;height:100%;object-fit:cover;" alt="banner 4 chai nước hoa">
            <img src="~/assets/images/banner 4 tinh dầu.png" style="min-width:100%;height:100%;object-fit:cover;" alt="banner 4 chai tinh dầu">
        </div>

        <!-- Button qua về -->
         <button onclick="prev()" style="position:absolute;left:15px;top:50%;transform:translateY(-50%);font-size:30px;background:rgba(0,0,0,0.3);color:white;border:none;padding:10px 15px;cursor:pointer;border-radius:6px;z-index:10">&#10094;</button>
         <button onclick="next()" style="position:absolute;right:15px;top:50%;transform:translateY(-50%);font-size:30px;background:rgba(0,0,0,0.3);color:white;border:none;padding:10px 15px;cursor:pointer;border-radius:6px;z-index:10">&#10095;</button>

        <!-- Dots -->
        <div id="dots" style="position:absolute;bottom:10px;left:50%;transform:translateX(-50%);display:flex;gap:8px;z-index:10"></div>

        <!-- JS -->
        <script>
            let index = 0;
            const banners = ["banner 4 nước hoa.png", "banner 4 tinh dầu.png"];
            const slidesEl = document.getElementById("slides");
            const dotsEl = document.getElementById("dots");
            const total = banners.length;

            // tạo dots
            banners.forEach((_, i) => {
              let dot = document.createElement("span");
              dot.onclick = () => { index = i; update(); };
              dot.style = "width:12px;height:12px;background:rgba(255,255,255,0.5);border-radius:50%;cursor:pointer;transition:0.3s";
              dot.id = "dot"+i;
              dotsEl.appendChild(dot);
            });

            function update(){
              slidesEl.style.transform = `translateX(${-index * 100}%)`;
              banners.forEach((_,i)=>{
                document.getElementById("dot"+i).style.background = i===index ? "white" : "rgba(255,255,255,0.5)";
                document.getElementById("dot"+i).style.transform = i===index ? "scale(1.3)" : "scale(1)";
              });
            }

            function next(){ index = (index + 1) % total; update(); }
            function prev(){ index = (index - 1 + total) % total; update(); }

            // autoplay 3s
            let autoPlay = setInterval(next, 3000);
            // hover pause
            slidesEl.parentElement?.addEventListener("mouseenter", ()=> clearInterval(autoPlay));
            slidesEl.parentElement?.addEventListener("mouseleave", ()=> autoPlay = setInterval(next, 3000));

            update();
        </script>
    </section>


