@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập - Scentory</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Phudu:wght@400;600;700&family=Questrial&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Questrial', sans-serif;
            background-color: #8B6F47;
            background-position: center;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0, 0, 0, 0.3);
                z-index: 1;
            }

        .container {
            width: 100%;
            max-width: 450px;
            position: relative;
            z-index: 2;
        }

        .header {
            text-align: center;
            margin-bottom: 2rem;
        }

            .header .logo {
                color: #fff;
                text-shadow: 0 2px 4px rgba(0,0,0,0.5);
            }

        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: #eee;
            text-decoration: none;
            margin-bottom: 1rem;
            cursor: pointer;
            transition: color 0.3s;
        }

            .back-button:hover {
                color: #fff;
            }

        .logo {
            font-family: 'Phudu', cursive;
            font-size: 3rem;
            font-weight: 700;
            color: #8B6F47;
            margin-bottom: 0.5rem;
        }

        .subtitle {
            color: #eee;
            text-shadow: 0 1px 2px rgba(0,0,0,0.4);
        }

        .role-badge {
            font-weight: 600;
            color: #DAC09B;
        }

        .role-selection {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .role-card {
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            padding: 2rem;
            border-radius: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.18);
        }

            .role-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
            }

        .role-card-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .role-card-left {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .role-icon {
            width: 48px;
            height: 48px;
            border-radius: 0.75rem;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(0, 0, 0, 0.1);
        }

            .role-icon svg {
                stroke: #333;
            }

        .role-title {
            font-family: 'Phudu', cursive;
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 0.25rem;
            color: #333;
        }

        .role-desc {
            font-size: 0.875rem;
            opacity: 0.9;
            color: #555;
        }

        .arrow-icon {
            width: 24px;
            height: 24px;
            stroke: #333;
        }

        .auth-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(15px);
            -webkit-backdrop-filter: blur(15px);
            border-radius: 1.5rem;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .form-container {
            padding: 2.5rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            color: #333;
            margin-bottom: 0.5rem;
        }

        .form-input {
            width: 100%;
            padding: 0.85rem 1rem;
            border: 1px solid #ddd;
            border-radius: 0.5rem;
            font-size: 1rem;
            font-family: 'Questrial', sans-serif;
            transition: all 0.3s;
        }

            .form-input:focus {
                outline: none;
                border-color: #8B6F47;
                box-shadow: 0 0 0 4px rgba(139, 111, 71, 0.15);
            }

            .form-input.invalid {
                border-color: #e74c3c;
            }

        .error-message {
            color: #e74c3c;
            font-size: 0.75rem;
            margin-top: 4px;
            height: 12px;
        }

        .password-input-wrapper {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: #666;
        }

        .form-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.875rem;
            margin-bottom: 1.5rem;
        }

        .checkbox-label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            cursor: pointer;
            color: #666;
        }

        .forgot-link {
            color: #666;
            text-decoration: none;
        }

            .forgot-link:hover {
                color: #333;
                text-decoration: underline;
            }

        .submit-btn {
            width: 100%;
            padding: 0.875rem;
            background: #8B6F47;
            color: white;
            border: none;
            border-radius: 0.5rem;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            font-family: 'Phudu', cursive;
        }

            .submit-btn:hover {
                background: #6B5437;
                transform: scale(1.02);
                box-shadow: 0 8px 25px rgba(139, 111, 71, 0.4);
            }

        .register-link-container {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.9rem;
            color: #333;
        }

            .register-link-container a {
                color: #8B6F47;
                font-weight: 600;
                text-decoration: none;
            }

                .register-link-container a:hover {
                    text-decoration: underline;
                }

        .footer {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.875rem;
            color: #eee;
            text-shadow: 0 1px 2px rgba(0,0,0,0.4);
        }

        .hidden {
            display: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Role Selection Screen -->
        <div id="roleSelection">
            <div class="header">
                <div class="logo">SCENTORY</div>
                <p class="subtitle">Vui lòng chọn vai trò để đăng nhập</p>
            </div>
            <div class="role-selection">
                <div class="role-card" onclick="selectRole('Admin')">
                    <div class="role-card-content">
                        <div class="role-card-left">
                            <div class="role-icon">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                            </div>
                            <div>
                                <div class="role-title">Admin</div>
                                <div class="role-desc">Dành cho quản trị viên hệ thống</div>
                            </div>
                        </div>
                        <svg class="arrow-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18l6-6-6-6"></path></svg>
                    </div>
                </div>
                <div class="role-card" onclick="selectRole('User')">
                    <div class="role-card-content">
                        <div class="role-card-left">
                            <div class="role-icon">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
                            </div>
                            <div>
                                <div class="role-title">User</div>
                                <div class="role-desc">Dành cho khách hàng thân thiết</div>
                            </div>
                        </div>
                        <svg class="arrow-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18l6-6-6-6"></path></svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Login Form Screen -->
        <div id="authScreen" class="hidden">
            <div class="header">
                <a class="back-button" onclick="backToRoleSelection()">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M19 12H5M12 19l-7-7 7-7"></path></svg>
                    <span>Quay lại</span>
                </a>
                <div class="logo">SCENTORY</div>
                <p class="subtitle">Đăng nhập với vai trò: <span class="role-badge" id="selectedRoleText"></span></p>
            </div>
            <div class="auth-card">
                <div class="form-container">
                    <div class="form-group">
                        <label class="form-label">Tên đăng nhập *</label>
                        <input type="text" class="form-input" id="loginUsername" placeholder="Nhập tên đăng nhập" required>
                        <div class="error-message"></div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Mật khẩu *</label>
                        <div class="password-input-wrapper">
                            <input type="password" class="form-input" id="loginPassword" placeholder="Nhập mật khẩu" required>
                            <button type="button" class="password-toggle" onclick="togglePassword('loginPassword')">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                            </button>
                        </div>
                        <div class="error-message"></div>
                    </div>
                    <div class="form-footer">
                        <label class="checkbox-label"><input type="checkbox"><span>Ghi nhớ</span></label>
                        <a href="#" class="forgot-link">Quên mật khẩu?</a>
                    </div>
                    <button class="submit-btn" onclick="handleLogin()">Đăng nhập</button>
                    <div class="register-link-container hidden" id="registerLinkContainer">
                        <span>Chưa có tài khoản?</span>
                        <a href="/Home/Register">Đăng ký ngay</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="footer">
            <p>© 2025 Scentory. Hương thơm thuần khiết - Đậm chất riêng</p>
        </div>
    </div>

    <script>
        let selectedRole = null;

        function selectRole(role) {
            selectedRole = role;
            document.getElementById('roleSelection').classList.add('hidden');
            document.getElementById('authScreen').classList.remove('hidden');
            document.getElementById('selectedRoleText').textContent = role;

            const registerLink = document.getElementById('registerLinkContainer');
            if (role === 'User') {
                registerLink.classList.remove('hidden');
            } else {
                registerLink.classList.add('hidden');
            }
        }

        function backToRoleSelection() {
            selectedRole = null;
            document.getElementById('roleSelection').classList.remove('hidden');
            document.getElementById('authScreen').classList.add('hidden');
        }

        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = input.nextElementSibling.querySelector('svg');
            if (input.type === 'password') {
                input.type = 'text';
                icon.innerHTML = '<path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path><line x1="1" y1="1" x2="23" y2="23"></line>';
            } else {
                input.type = 'password';
                icon.innerHTML = '<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle>';
            }
        }

        function validateLogin() {
            let isValid = true;
            const inputs = document.getElementById('authScreen').querySelectorAll('input[required]');

            inputs.forEach(input => {
                const parent = input.closest('.form-group');
                const errorDiv = parent.querySelector('.error-message');
                let message = '';

                if (input.value.trim() === '') {
                    message = 'Vui lòng không để trống trường này.';
                    isValid = false;
                }

                errorDiv.textContent = message;
                input.classList.toggle('invalid', message !== '');
            });
            return isValid;
        }

        function handleLogin() {
            if (!validateLogin()) {
                return;
            }

            const username = document.getElementById('loginUsername').value;
            const password = document.getElementById('loginPassword').value;

            console.log('Login attempt:', { username, password, role: selectedRole });
            alert(`Đăng nhập với vai trò ${selectedRole} và tài khoản: ${username}`);

            if (selectedRole === 'Admin') {
                 window.location.href = '/Admin/Home/Index';
            } else {
                 window.location.href = '/Home/Index';
            }
        }
    </script>
</body>
</html>