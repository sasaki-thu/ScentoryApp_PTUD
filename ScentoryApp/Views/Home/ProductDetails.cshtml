            color: #C38154;
        }

    .breadcrumb-item.active {
        color: #999;
    }

    /* Product category */
    .product-category {
        color: #C38154;
        font-size: 14px;
        text-transform: uppercase;
        margin-bottom: 10px;
    }

        .product-category a {
            color: #C38154;
            text-decoration: none;
        }

