    }

    /* Product meta */
    .product-meta {
        padding-top: 20px;
        border-top: 1px solid #e5e5e5;
        font-size: 14px;
        color: #666;
    }

        .product-meta p {
            margin-bottom: 8px;
        }

        .product-meta a {
            color: #C38154;
