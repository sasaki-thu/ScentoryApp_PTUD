            background-color: #a66b42;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(195, 129, 84, 0.3);
        }

    /* Wishlist */
    .wishlist-link a {
        color: #C38154;
        text-decoration: none;
        font-size: 15px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .wishlist-link a:hover {
            color: #a66b42;
        }

    .wishlist-link i {
