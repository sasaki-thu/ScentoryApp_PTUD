            position: relative;
            padding-left: 25px;
        }

            .feature-list li:before {
                content: "•";
                color: #C38154;
                font-weight: bold;
                position: absolute;
                left: 0;
                top: 8px;
            }

    /* Text Styling */
    .tab-inner-content p {
        color: #666;
        font-size: 15px;
        line-height: 1.8;
        margin-bottom: 15px;
    }

    .tab-inner-content strong {
        color: #333;
        font-weight: 600;
    }

    .note-text {
        font-style: italic;
        color: #777;
    }
