                        ngayketthuc: '2025-09-05 08:00:00',
                        gioihansudung: 2
                    },
                    'GG002': {
                        id: 'GG002',
                        mota: 'Ưu đãi giảm giá giữa tháng',
                        loaigiam: 'VNĐ',
                        giatrigiam: 15000,
                        giatritoithieu: 0,
                        giagiamtoida: 15000,
                        ngaybatdau: '2025-09-15 00:00:00',
                        ngayketthuc: '2025-09-15 23:59:59',
                        gioihansudung: 1
                    },
                    'GG003': {
                        id: 'GG003',
                        mota: 'Ưu đãi giảm giá cuối tháng',
                        loaigiam: '%',
                        giatrigiam: 5,
                        giatritoithieu: 0,
                        giagiamtoida: 25000,
                        ngaybatdau: '2025-09-25 00:00:00',
                        ngayketthuc: '2025-09-25 23:59:59',
                        gioihansudung: 1
                    },
                    'GG004': {
                        id: 'GG004',
                        mota: 'Ưu đãi săn sale ngày đôi',
                        loaigiam: '%',
                        giatrigiam: 10,
                        giatritoithieu: 0,
                        giagiamtoida: 25000,
                        ngaybatdau: '2025-10-10 00:00:00',
                        ngayketthuc: '2025-10-10 23:59:59',
                        gioihansudung: 2
                    },
                    'GG005': {
                        id: 'GG005',
                        mota: 'Ưu đãi Dịp lễ 20/10',
                        loaigiam: 'VNĐ',
                        giatrigiam: 20000,
                        giatritoithieu: 0,
                        giagiamtoida: 0,
                        ngaybatdau: '2025-10-18 18:10:00',
                        ngayketthuc: '2025-10-20 23:59:59',
                        gioihansudung: 2
                    }
                };
                return mockData[id];
            }

            // --- HÀM MOCKUP: Đổ dữ liệu vào form ---
            function fillForm(data) {
                $('#cp_id').val(data.id);
                $('#cp_mota').val(data.mota);
                $('#cp_loaigiam').val(data.loaigiam);
                $('#cp_giatrigiam').val(data.giatrigiam);
                $('#cp_giatritoithieu').val(data.giatritoithieu);
                $('#cp_giagiamtoida').val(data.giagiamtoida);
                $('#cp_ngaybatdau').val(data.ngaybatdau);
                $('#cp_ngayketthuc').val(data.ngayketthuc);
                $('#cp_gioihansudung').val(data.gioihansudung);
            }

            // --- HÀM: Xóa sạch form ---
            function clearForm() {
                $('#couponForm')[0].reset();
                $('#cp_id').val('');
            }

            // --- HÀM: Khóa hoặc Mở khóa form ---
            function toggleFormLock(disabled) {
                $('#couponFieldset').prop('disabled', disabled);
                // Ẩn/hiện nút Lưu
                if (disabled) {
                    $('#saveCouponBtn').hide();
                } else {
                    $('#saveCouponBtn').show();
                }
            }

            // === XỬ LÝ SỰ KIỆN ===

            // 1. Bấm nút "Thêm mã giảm giá mới"
            $('#addCoupon').on('click', function () {
                clearForm();
                toggleFormLock(false); // Mở khóa form
                $('#couponModalLabel').text('Thêm sản phẩm mới');
                $('#couponModal').modal('show');
            });

            // 2. Bấm nút "Details"
            $('#couponTableBody').on('click', '.btn-details', function (e) {
                e.preventDefault();
                const id = $(this).data('id');
                const data = getMockCouponData(id);

                fillForm(data);
                toggleFormLock(true); // Khóa form
                $('#couponModalLabel').text('Chi tiết sản phẩm');
                $('#couponModal').modal('show');
            });

            // 3. Bấm nút "Edit"
            $('#couponTableBody').on('click', '.btn-edit', function (e) {
                e.preventDefault();
                const id = $(this).data('id');
                const data = getMockCouponData(id);

                fillForm(data);
                toggleFormLock(false); // Mở khóa form
                $('#couponModalLabel').text('Chỉnh sửa mã giảm giá');
                $('#couponModal').modal('show');
            });

            // 4. Bấm nút "Remove"
            $('#couponTableBody').on('click', '.btn-remove', function (e) {
                e.preventDefault();
                const id = $(this).data('id');
                const data = getMockCouponData(id);

                // Đặt tên vào modal xác nhận
                $('#idcouponRemove').text(data.id);
                // Lưu id vào modal để dùng lúc bấm nút Xóa
                $('#removeCouponId').val(id);

                $('#confirmRemoveModal').modal('show');
            });

            // 5. Bấm nút "Xóa" trên Modal xác nhận
            $('#confirmRemoveBtn').on('click', function () {
                const id = $('#removeCouponId').val();

                // (Trong dự án thật, bạn sẽ dùng AJAX gọi về Controller để xóa)

                // Xóa (giả) hàng khỏi bảng
                $('#row-' + id).remove();

                // Đóng modal
                $('#confirmRemoveModal').modal('hide');
            });
            // 6. Bấm nút "Lưu thay đổi"
            $('#saveCouponBtn').on('click', function () {

                // Lấy dữ liệu từ form
                let coupon = {
                    id: $('#cp_id').val().trim(),
                    mota: $('#cp_mota').val(),
                    loaigiam: $('#cp_loaigiam').val(),
                    giatrigiam: $('#cp_giatrigiam').val(),
                    giatritoithieu: $('#cp_giatritoithieu').val(),
                    giagiamtoida: $('#cp_giagiamtoida').val(),
                    ngaybatdau: $('#cp_ngaybatdau').val(),
                    ngayketthuc: $('#cp_ngayketthuc').val(),
                    gioihansudung: $('#cp_gioihansudung').val()
                };

                console.log("SAVE DATA: ", coupon);

                // ==== KIỂM TRA XEM ĐANG THÊM HAY SỬA ====
                let rowId = `#row-${coupon.id}`;
                let isEdit = $(rowId).length > 0;

                let newRow = `
                <tr id="row-${coupon.id}">
                    <td>${coupon.id}</td>
                    <td>${coupon.mota}</td>
                    <td>${coupon.loaigiam}</td>
                    <td>${coupon.giatrigiam}</td>
                    <td>${coupon.giatritoithieu}</td>
                    <td>${coupon.giagiamtoida}</td>
                    <td>${coupon.ngaybatdau}</td>
                    <td>${coupon.ngayketthuc}</td>
                    <td>${coupon.gioihansudung}</td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-sm dropdown-toggle more-vertical" type="button" data-toggle="dropdown">
                                <span class="text-muted sr-only">Action</span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item btn-details" href="#" data-id="${coupon.id}">Details</a>
                                <a class="dropdown-item btn-edit" href="#" data-id="${coupon.id}">Edit</a>
                                <a class="dropdown-item btn-remove" href="#" data-id="${coupon.id}">Remove</a>
                            </div>
                        </div>
                    </td>
                </tr>
            `;

                if (isEdit) {
                    // === CHẾ ĐỘ SỬA ===
                    $(rowId).replaceWith(newRow);
                } else {
                    // === CHẾ ĐỘ THÊM MỚI ===
                    $('#couponTableBody').append(newRow);
                }

                // Đóng modal
                $('#couponModal').modal('hide');

                alert("Đã lưu và cập nhật bảng (mockup)");
            });
            $(document).on('click', '.editBtn', function () {
                let id = $(this).closest('tr').data('id');
                editCoupon(id);
            });
            
        });
    </script>
