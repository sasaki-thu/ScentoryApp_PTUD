<div class="modal fade" id="couponModal" tabindex="-1" role="dialog" aria-labelledby="couponModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="couponModalLabel">Thông tin mã giảm giá</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="couponForm">
                    <fieldset id="couponFieldset">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="cp_id">ID Mã giảm giá</label>
                                <input type="text" class="form-control" id="cp_id" placeholder="GG00x">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="cp_mota">Mô tả</label>
                                <input type="text" class="form-control" id="cp_mota" placeholder="Ưu đãi...">
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="cp_loaigiam">Loại giảm</label>
                            <select id="cp_loaigiam" class="form-control">
                                <option selected>%</option>
                                <option>VNĐ</option>
                            </select>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="cp_giatrigiam">Giá trị giảm</label>
                                <input type="number" class="form-control" id="cp_giatrigiam" placeholder="5">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="cp_giatritoithieu">Giá trị tối thiểu</label>
                                <input type="number" class="form-control" id="cp_giatritoithieu" placeholder="0">
                        </div>
                            <div class="form-group col-md-4">
                                <label for="cp_giagiamtoida">Giá giảm tối đa</label>
                                <input type="number" class="form-control" id="cp_giagiamtoida" placeholder="0">
                        </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="cp_ngaybatdau">Ngày bắt đầu</label>
                                <input type="datetime-local" class="form-control" id="cp_ngaybatdau">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="cp_ngayketthuc">Ngày kết thúc</label>
                                <input type="datetime-local" class="form-control" id="cp_ngayketthuc">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="cp_gioihansudung">Giới hạn sử dụng</label>
                                <input type="number" class="form-control" id="cp_gioihansudung" placeholder="1">
