@model IEnumerable<ScentoryApp.Models.SanPham>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/Adminassets/css/dataTables.bootstrap4.css">
<link rel="stylesheet" href="~/css/toast.css">

<style>
    .image-upload-area {
        border: 2px dashed #ccc;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.2s ease-in-out;
        background: #fff;
    }

        .image-upload-area:hover {
            border-color: #007bff;
            background-color: #f8f9fa;
        }

        .image-upload-area .fe-upload {
            color: #6c757d;
        }

        .image-upload-area:hover .fe-upload {
            color: #007bff;
        }

    #imagePreview img {
        max-width: 150px;
        max-height: 150px;
        object-fit: contain;
        border-radius: 4px;
    }

    /* Chỉnh lại phân trang cho đẹp */
    .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
    }

    /* Ẩn thanh search mặc định của DataTables */
    .dataTables_filter {
        display: none;
    }

    /* chỉnh màu */
    #dataTable-1 thead th {
        color: #007bff;
    }
    /* Thêm style báo lỗi chữ đỏ */
    label.error {
        color: red;
        font-size: 13px;
        display: block;
        margin-top: 5px;
    }

    input.error, select.error {
        border-color: red;
    }
</style>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="row align-items-center mb-2">
                <div class="col">
                    <h2 class="h2 page-title">Quản lý sản phẩm</h2>
                </div>
                <div class="col-auto">
                    <div class="form-inline">
                        <div class="form-group mr-2">
                            <input type="text" id="customSearch" class="form-control" placeholder="🔍 Tìm kiếm sản phẩm..." style="min-width: 250px;">
                        </div>
                        <!-- nút lọc -->
                        <button type="button" class="btn btn-secondary mr-2" data-toggle="modal" data-target=".modal-slide">
                            <i class="fe fe-filter fe-16"></i> Lọc sản phẩm
                        </button>
                        <button type="button" class="btn btn-primary" id="addProductBtn">
                            <i class="fe fe-plus fe-16"></i> Thêm sản phẩm mới
                        </button>
                    </div>
                </div>
            </div>

            <!-- Bảng dữ liệu sản phẩm -->
            <div class="row my-1">
                <div class="col-md-12">
                    <div class="card shadow">
                        <div class="card-body">
                            <table class="table datatables" id="dataTable-1">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Giá</th>
                                        <th>Tồn kho</th>
                                        <th>Trạng thái</th>
                                        <th>Thời gian tạo</th>
                                        <th>Danh mục</th>
                                        <th>Tác vụ</th>
                                    </tr>
                                </thead>
                                <tbody id="productTableBody">
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr id="row-@item.IdSanPham.Trim()">
                                                <td>@item.IdSanPham</td>
                                                <td>@item.TenSanPham</td>
                                                <td>@item.GiaNiemYet.ToString("N0") đ</td>
                                                <td>@item.SoLuongTonKho</td>
                                                <td>
                                                    @if (item.TrangThaiSp)
                                                    {
                                                        <span class="badge badge-success">Đang bán</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-danger">Ngừng bán</span>
                                                    }
                                                </td>
                                                <td>@item.ThoiGianTaoSp.ToString("dd/MM/yyyy HH:mm")</td>
                                                <td>
                                                    @(item.IdDanhMucSanPhamNavigation != null ? item.IdDanhMucSanPhamNavigation.TenDanhMucSanPham : item.IdDanhMucSanPham)
                                                </td>
                                                <td>
                                                    <div class="dropdown">
                                                        <button class="btn btn-sm dropdown-toggle more-vertical" type="button" data-toggle="dropdown">
                                                            <span class="text-muted sr-only">Action</span>
                                                        </button>
                                                        <div class="dropdown-menu dropdown-menu-right">
                                                            <a class="dropdown-item btn-details" href="javascript:void(0)" data-id="@item.IdSanPham.Trim()">Chi tiết</a>
                                                            <a class="dropdown-item btn-edit" href="javascript:void(0)" data-id="@item.IdSanPham.Trim()">Chỉnh sửa</a>
                                                            <a class="dropdown-item btn-delete" href="javascript:void(0)" data-id="@item.IdSanPham.Trim()">Xóa</a>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="productModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Thông tin sản phẩm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="productForm" enctype="multipart/form-data">
                    <fieldset id="productFieldset">
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label>ID Sản phẩm</label>
                                <input type="text" class="form-control" id="IdSanPham" name="IdSanPham"
                                       readonly style="background-color: #e9ecef; font-weight: bold;">
                            </div>
                            <div class="form-group col-md-8">
                                <label>Tên Sản phẩm</label>
                                <input type="text" class="form-control" id="TenSanPham" name="TenSanPham" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Mô tả</label>
                            <textarea class="form-control" id="MoTaSanPham" name="MoTaSanPham" required rows="3"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Hình ảnh</label>
                            <div id="imageDropzone" class="image-upload-area">
                                <input type="file" id="ImageFile" name="ImageFile" accept="image/*" class="d-none">
                                <div class="text-center p-4">
                                    <i class="fe fe-upload fe-32 text-muted"></i>
                                    <p class="mt-2 text-muted">Nhấp để chọn ảnh (JPG, PNG).</p>
                                </div>
                            </div>
                            <div id="imagePreview" class="mt-2 p-2 border rounded align-items-center" style="display:none;">
                                <img id="previewImg" src="" alt="Preview" class="img-thumbnail mr-3">
                                <button type="button" class="btn btn-sm btn-outline-danger fe fe-x" id="removeImageBtn"></button>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label>Giá niêm yết</label>
                                <input type="number" class="form-control" id="GiaNiemYet" name="GiaNiemYet" placeholder="0" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label>Số lượng tồn kho</label>
                                <input type="number" class="form-control" id="SoLuongTonKho" name="SoLuongTonKho" placeholder="0" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label>Danh mục</label>
                                <select class="form-control" id="IdDanhMucSanPham" name="IdDanhMucSanPham" asp-items="ViewBag.IdDanhMucSanPham">
                                    <option value="">-- Chọn danh mục --</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Thời gian tạo</label>
                                <input type="text" class="form-control" id="ThoiGianTaoSp" readonly placeholder="Tự động cập nhật...">
                            </div>
                            <div class="form-group col-md-6">
                                <label>Cập nhật lần cuối</label>
                                <input type="text" class="form-control" id="ThoiGianCapNhat" readonly placeholder="Chưa cập nhật">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" id="TrangThaiSp" name="TrangThaiSp" value="true" checked>
                                <label class="custom-control-label" for="TrangThaiSp">Đang bán</label>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="btnSave">Lưu thay đổi</button>
            </div>
        </div>
    </div>
</div>

<!-- thêm lọc -->
<div class="modal fade modal-slide" tabindex="-1" role="dialog" aria-labelledby="defaultModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="defaultModalLabel">Bộ lọc sản phẩm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="fe fe-x fe-12"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="p-2">
                    <div class="form-group my-4">
                        <p class="mb-2"><strong>Danh mục</strong></p>
                        <select class="form-control" id="filterCategory">
                            <option value="">Tất cả danh mục</option>
                            @if (ViewBag.IdDanhMucSanPham != null)
                            {
                                foreach (var item in ViewBag.IdDanhMucSanPham as IEnumerable<SelectListItem>)
                                {
                                    <option value="@item.Text">@item.Text</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="form-group my-4">
                        <p class="mb-2"><strong>Khoảng giá (VNĐ)</strong></p>
                        <div class="form-row">
                            <div class="col-6">
                                <input type="number" id="minPrice" class="form-control" placeholder="Từ...">
                            </div>
                            <div class="col-6">
                                <input type="number" id="maxPrice" class="form-control" placeholder="Đến...">
                            </div>
                        </div>
                    </div>

                    <div class="form-group my-4">
                        <p class="mb-2"><strong>Trạng thái</strong></p>
                        <div class="custom-control custom-radio">
                            <input type="radio" id="statusAll" name="filterStatus" class="custom-control-input" value="" checked>
                            <label class="custom-control-label" for="statusAll">Tất cả</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input type="radio" id="statusActive" name="filterStatus" class="custom-control-input" value="Đang bán">
                            <label class="custom-control-label" for="statusActive">Đang bán</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input type="radio" id="statusInactive" name="filterStatus" class="custom-control-input" value="Ngừng bán">
                            <label class="custom-control-label" for="statusInactive">Ngừng bán</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn mb-2 btn-primary btn-block" id="btnApplyFilter">Áp dụng</button>
                <button type="button" class="btn mb-2 btn-secondary btn-block" id="btnResetFilter">Đặt lại</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa sản phẩm <strong id="deleteName"></strong> không?
                <input type="hidden" id="deleteId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-danger" id="btnConfirmDelete">Xóa</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/toast.js"></script>
    <script src="~/Adminassets/js/jquery.dataTables.min.js"></script>
    <script src="~/Adminassets/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Adminassets/js/jquery.validate.min.js"></script>

    <script>
        $(document).ready(function () {
            // VALIDATE
            $("#productForm").validate({
                rules: {
                    IdSanPham: { required: true, minlength: 5, maxlength: 5 },
                    TenSanPham: { required: true },
                    MoTaSanPham: { required: true },
                    GiaNiemYet: { required: true, number: true, min: 0 },
                    SoLuongTonKho: { required: true, number: true, min: 0 },
                    IdDanhMucSanPham: { required: true }
                },
                messages: {
                    IdSanPham: { required: "Vui lòng nhập ID", minlength: "ID phải 5 ký tự", maxlength: "ID phải 5 ký tự" },
                    TenSanPham: "Vui lòng nhập Tên sản phẩm",
                    MoTaSanPham: "Vui lòng nhập Mô tả",
                    GiaNiemYet: { required: "Nhập giá", number: "Phải là số", min: "Không âm" },
                    SoLuongTonKho: { required: "Nhập số lượng", number: "Phải là số", min: "Không âm" },
                    IdDanhMucSanPham: "Vui lòng chọn Danh mục"
                }
            });
            // --- CẤU HÌNH DATATABLES ---
            var table = $('#dataTable-1').DataTable({
                autoWidth: true,
                "lengthChange": false,
                "searching": true,
                "dom": 'rt<"d-flex justify-content-between align-items-center"ip>',

                "language": {
                    "sProcessing":   "Đang xử lý...",
                    "sZeroRecords":  "Không tìm thấy kết quả phù hợp",
                    "sInfo":         "Đang hiển thị _START_ đến _END_ trong tổng số _TOTAL_ mục",
                    "sInfoEmpty":    "Đang hiển thị 0 đến 0 trong tổng số 0 mục",
                    "sInfoFiltered": "(được lọc từ _MAX_ mục)",
                    "sSearch":       "Tìm kiếm:",
                    "oPaginate": {
                        "sFirst":    "Đầu",
                        "sPrevious": "Trước",
                        "sNext":     "Tiếp",
                        "sLast":     "Cuối"
                    }
                }
            });

            // -- LỌC
            $.fn.dataTable.ext.search.push(
                function(settings, data, dataIndex) {
                    // 1. Lấy giá trị từ các ô input trong Modal
                    var minPrice = parseInt($('#minPrice').val(), 10);
                    var maxPrice = parseInt($('#maxPrice').val(), 10);
                    var categoryFilter = $('#filterCategory').val();
                    var statusFilter = $('input[name="filterStatus"]:checked').val();

                    // 2. Lấy dữ liệu từ dòng hiện tại trong bảng
                    var priceRaw = data[2] || "0";
                    var price = parseFloat(priceRaw.replace(/[\.,\sđ]/g, ""));

                    var status = $(table.row(dataIndex).node()).find('td:eq(4)').text().trim(); 
                    var category = data[6] || "";

                    // 3. Logic kiểm tra (Nếu thỏa mãn tất cả điều kiện thì trả về true)

                    // Kiểm tra Danh mục
                    if (categoryFilter && !category.includes(categoryFilter)) {
                        return false;
                    }

                    // Kiểm tra Trạng thái
                    if (statusFilter && status !== statusFilter) {
                        return false;
                    }

                    // Kiểm tra Khoảng giá
                    if (!isNaN(minPrice) && price < minPrice) {
                        return false;
                    }
                    if (!isNaN(maxPrice) && price > maxPrice) {
                        return false;
                    }

                    return true;
                }
            );

            // Xử lý sự kiện nút "Áp dụng"
            $('#btnApplyFilter').click(function() {
                table.draw(); // Vẽ lại bảng => Kích hoạt hàm lọc ở trên
                $('.modal-slide').modal('hide'); // Đóng modal
            });

            // Xử lý sự kiện nút "Đặt lại" (Reset)
            $('#btnResetFilter').click(function() {
                $('#minPrice').val('');
                $('#maxPrice').val('');
                $('#filterCategory').val('');
                $('#statusAll').prop('checked', true);

                table.draw(); // Vẽ lại bảng (về mặc định)
            });

            // KẾT THÚC LOGIC LỌC

            // --- KẾT NỐI Ô TÌM KIẾM CUSTOM ---
            $('#customSearch').on('keyup', function () {
                table.search(this.value).draw();
            });

            // --- CODE AJAX LOGIC ---

            // 1. XỬ LÝ ẢNH
            $('#imageDropzone').off('click').on('click', function (e) {
                e.stopPropagation();

                if (!$('#productFieldset').prop('disabled')) {
                    $('#ImageFile')[0].click();
                }
            });

            $('#ImageFile').off('change').on('change', function () {
                if (this.files && this.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $('#previewImg').attr('src', e.target.result);
                        $('#imagePreview').css('display', 'flex');
                        $('#imageDropzone').hide();
                    };
                    reader.readAsDataURL(this.files[0]);
                }
            });

            // remove image
            $('#removeImageBtn').off('click').on('click', function () {
                $('#ImageFile').val('');
                $('#previewImg').attr('src', '');
                $('#imagePreview').hide();
                $('#imageDropzone').show();
            });

            // 2. RESET FORM
            function resetForm() {
                var validator = $("#productForm").validate();
                validator.resetForm();
                $('.error').removeClass('error');
                $('#productForm')[0].reset();
                // reset ảnh
                $('#ImageFile').val('');
                $('#previewImg').attr('src', '');
                $('#imagePreview').hide();
                $('#imageDropzone').show();
                $('#productFieldset').prop('disabled', false);
                $('#btnSave').show();
                $('#TrangThaiSp').prop('checked', true);
                $('#ThoiGianTaoSp').val('');
                $('#ThoiGianCapNhat').val('');
            }

            // 3. NÚT THÊM MỚI
            $('#addProductBtn').click(function () {
                resetForm();
                $('#modalTitle').text('Thêm sản phẩm mới');
                var now = new Date().toLocaleString('vi-VN');
                $('#ThoiGianTaoSp').val(now);
                $.get('/Admin/AdminProducts/GetNextId', function(res) {
                    if(res.success) {
                        $('#IdSanPham').val(res.data);
                    } else {
                        showToast("Lỗi lấy mã sản phẩm", "error");
                    }
                });

                $('#productModal').modal('show');
            });

            // 4. NÚT SỬA & CHI TIẾT
            $('body').on('click', '.btn-edit, .btn-details', function (e) {
                e.preventDefault();
                var id = $(this).data('id');
                var isDetail = $(this).hasClass('btn-details');
                // Reset validate
                var validator = $("#productForm").validate();
                validator.resetForm();
                $('.error').removeClass('error');
                $.ajax({
                    url: '/Admin/AdminProducts/GetById',
                    type: 'GET',
                    data: { id: id },
                    success: function (res) {
                        if (res.success) {
                            var d = res.data;
                            resetForm();
                            $('#IdSanPham').val(d.idSanPham).prop('readonly', true);
                            $('#TenSanPham').val(d.tenSanPham);
                            $('#MoTaSanPham').val(d.moTaSanPham);
                            $('#GiaNiemYet').val(d.giaNiemYet);
                            $('#SoLuongTonKho').val(d.soLuongTonKho);
                            $('#IdDanhMucSanPham').val(d.idDanhMucSanPham);
                            $('#TrangThaiSp').prop('checked', d.trangThaiSp);
                            $('#ThoiGianTaoSp').val(d.thoiGianTaoSp);
                            $('#ThoiGianCapNhat').val(d.thoiGianCapNhat);

                            if (d.anhBase64) {
                                $('#previewImg').attr('src', d.anhBase64);
                                $('#imagePreview').css('display', 'flex');
                                $('#imageDropzone').hide();
                            }

                            if (isDetail) {
                                $('#modalTitle').text('Chi tiết sản phẩm');
                                $('#productFieldset').prop('disabled', true);
                                $('#btnSave').hide();
                            } else {
                                $('#modalTitle').text('Cập nhật sản phẩm');
                            }
                            $('#productModal').modal('show');
                        } else {
                            showToast(res.message, 'error');
                        }
                    },
                    error: function() { showToast("Lỗi kết nối!", 'error'); }
                });
            });

            // 5. NÚT LƯU
            $('#btnSave').click(function () {
                 if ($("#productForm").valid()) {
                    var formData = new FormData($('#productForm')[0]);

                $.ajax({
                    url: '/Admin/AdminProducts/Save',
                    type: 'POST',
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function (res) {
                        if (res.success) {
                                showToast(res.message, 'success');
                                setTimeout(function() { location.reload(); }, 1500);
                            } else {
                                showToast(res.message, 'error');
                            }
                        },
                        error: function () { showToast("Lỗi hệ thống!", 'error'); }
                    });
                }
            });

            // 6. NÚT XÓA
            $('body').on('click', '.btn-delete', function () {
                var id = $(this).data('id');
                var name = $(this).closest('tr').find('td:eq(1)').text();
                $('#deleteName').text(name);
                $('#deleteId').val(id);
                $('#deleteModal').modal('show');
            });

            $('#btnConfirmDelete').click(function () {
                var id = $('#deleteId').val();
                $.ajax({
                    url: '/Admin/AdminProducts/Delete',
                    type: 'POST',
                    data: { id: id },
                    success: function (res) {
                        if (res.success) {
                            $('#deleteModal').modal('hide');
                            showToast(res.message, 'success');
                            setTimeout(function() { location.reload(); }, 1500);
                        } else {
                            showToast(res.message, 'error');
                        }
                    },
                    error: function() { showToast("Không thể xóa danh mục này (có thể đang chứa sản phẩm).", 'error'); }
                });
            });
        });
    </script>
}