<!-- sidebar -->
<aside class="sidebar-left border-right bg-white shadow" id="leftSidebar" data-simplebar>
    <a href="#" class="btn collapseSidebar toggle-btn d-lg-none text-muted ml-2 mt-3" data-toggle="toggle">
        <i class="fe fe-x"><span class="sr-only"></span></i>
    </a>
    <nav class="vertnav navbar navbar-light">
        <!-- nav bar -->
        <div class="w-100 mb-4 d-flex">
            @* Sửa link logo trỏ về websit*@
            <a class="navbar-brand mx-auto mt-2 flex-fill text-center" href="/">
                <!-- Logo đầy đủ (chỉ hiện khi sidebar MỞ) -->
                <img src="~/Adminassets/images/scentorylogoopen.png" alt="Scentory" style="max-height: 60px;" class="logo-full" />
                <!-- Logo icon (chỉ hiện khi sidebar ĐÓNG) -->
                <img src="~/Adminassets/images/scentorylogo.png" alt="Scentory" style="max-height: 40px;" class="logo-icon" />
            </a>
        </div>

        <!-- Menu -->
        <ul class="navbar-nav flex-fill w-100 mb-2">

            <!-- 1. Dashboard -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                @* Đặt 'active' cho trang mặc định *@
                <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <i class="fe fe-home fe-16"></i>
                    <span class="ml-3 item-text">Dashboard</span>
                </a>
            </li>

            <!-- 2. Quản lý sản phẩm -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminProducts" ? "active" : "")">
                <a class="nav-link" asp-area="Admin" asp-controller="AdminProducts" asp-action="Index">
                    <i class="fe fe-box fe-16"></i>
                    <span class="ml-3 item-text">Quản lý sản phẩm</span>
                </a>
            </li>

            <!-- 3. Quản lý danh mục sản phẩm -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminCategories" ? "active" : "")">
                <a class="nav-link" asp-area="Admin" asp-controller="AdminCategories" asp-action="Index">
                    <i class="fe fe-grid fe-16"></i>
                    <span class="ml-3 item-text">Quản lý danh mục sản phẩm</span>
                </a>
            </li>

            <!-- 4. Quản lý đơn hàng -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminOrders" ? "active" : "")">
                <a class="nav-link" asp-area="Admin" asp-controller="AdminOrders" asp-action="Index">
                    <i class="fe fe-shopping-cart fe-16"></i>
                    <span class="ml-3 item-text">Quản lý đơn hàng</span>
                </a>
            </li>

            <!-- 5. Quản lý khách hàng -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminUsers" ? "active" : "")">
                <a class="nav-link" asp-area="Admin" asp-controller="AdminUsers" asp-action="Index">
                    <i class="fe fe-users fe-16"></i>
                    <span class="ml-3 item-text">Quản lý khách hàng</span>
                </a>
            </li>

            <!-- 6. Quản lý mã giảm giá -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminCoupons" ? "active" : "")">
                <a class="nav-link" asp-area="Admin" asp-controller="AdminCoupons" asp-action="Index">
                    <i class="fe fe-tag fe-16"></i>
                    <span class="ml-3 item-text">Quản lý mã giảm giá</span>
                </a>
            </li>

            <!-- 7. Quản lý Blog -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminBlogs" ? "active" : "")">
                <a class="nav-link" asp-area="Admin" asp-controller="AdminBlogs" asp-action="Index">
                    <i class="fe fe-book-open fe-16"></i>
                    <span class="ml-3 item-text">Quản lý Blog</span>
                </a>
            </li>


            <!-- 8. Quản lý tài khoản -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminAccounts" ? "active" : "")">
                <a class="nav-link" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Index">
                    <i class="fe fe-user fe-16"></i>
                    <span class="ml-3 item-text">Quản lý tài khoản</span>
                </a>
            </li>
        </ul>

    </nav>
</aside>
<style>
    .nav-item.active > a.nav-link {
        background: #e6f2ff;
        color: #007bff !important;
        border-radius: 6px;
        font-weight: 600;
    }
</style>
